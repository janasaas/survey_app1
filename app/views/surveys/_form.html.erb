<%= nested_form_for @survey do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
  <% end %>
  <p><%= f.link_to_add "Add Question", :questions %>
  <p><%= f.submit "Submit", class: "btn btn-large btn-primary" %></p>
<% end %>
